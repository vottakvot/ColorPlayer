<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        style="@style/CommonImageView"
        android:id="@+id/action_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_app_bar"
        android:background="@color/common_transparent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_alignParentLeft="true" />

    <Button
        style="@style/SmallTextButton"
        android:id="@+id/action_bar_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_marginRight="2dp"
        android:minLines="2"
        android:maxLines="2"
        android:visibility="invisible"
        android:background="@drawable/drawable_common_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/action_bar_image"
        android:layout_toLeftOf="@+id/action_bar_timer">
        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action_bar_name_color"
            android:text="@string/app_name_action_bar_color"/>
        <TextView
            style="@style/SmallTextView"
            android:id="@+id/action_bar_name_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_action_bar_audio"/>
        <TextView
            style="@style/SmallTextView"
            android:id="@+id/action_bar_name_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_action_bar_player"
            android:textColor="@color/defaultPrimary"/>
    </LinearLayout>
</RelativeLayout>