<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ======================================================================================= -->
    <!-- Base themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light"/>

    <!-- Base widgets -->
    <style name="CommonTextView" parent="android:Widget.TextView">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="CommonEditText" parent="android:Widget.EditText"/>
    <style name="CommonButton" parent="android:Widget.Button"/>
    <style name="CommonImageButton" parent="android:Widget.ImageButton"/>
    <style name="CommonImageView" parent="android:Widget.ImageWell"/>
    <style name="CommonSpinner" parent="android:Widget.Spinner"/>
    <style name="CommonCheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">?android:textColor</item>
    </style>
    <style name="CommonRadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textColor">?android:textColor</item>
    </style>
    <style name="CommonRecycleView"/>

    <!-- ======================================================================================= -->
    <!-- Color theme -->
    <style name="ColorTheme" parent="AppTheme">
        <item name="colorPrimary">@color/defaultPrimary</item>
        <item name="colorPrimaryDark">@color/defaultPrimaryDark</item>
        <item name="colorAccent">@color/defaultAccent</item>
        <item name="colorControlNormal">@color/defaultForeground</item>
        <item name="android:textColorHint">@color/defaultHints</item>
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:windowBackground">@color/defaultPrimary</item>
        <item name="android:itemBackground">@color/defaultBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Custom layout_background -->
    <style name="CustomBackground">
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Custom widgets styles -->
    <!-- TextView style -->
    <style name="BigTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="MediumTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="SmallTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:maxLines">1</item>
