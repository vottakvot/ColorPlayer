<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playlist_track_item_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- View track -->
    <ImageView
        android:id="@+id/playlist_track_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/item_track"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/playlist_track_name"/>

    <!-- Number of track -->
    <TextView
        android:id="@+id/playlist_track_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/playlist_track_image"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_track_image"
        app:layout_constraintLeft_toLeftOf="@+id/playlist_track_image"
        app:layout_constraintRight_toRightOf="@+id/playlist_track_image" />

    <!-- Name of track -->
    <TextView
        android:id="@+id/playlist_track_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:maxLines="2"
        android:gravity="left|center_vertical"
        android:text="None"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/playlist_track_image"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
