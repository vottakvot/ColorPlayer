<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:enabled="false">

    <ImageView
        style="@style/PlayerImageViewCommon"
        android:id="@+id/action_bar_image"
        android:src="@drawable/app_bar"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:layout_alignParentLeft="true" />

    <Button
        style="@style/PlayerButtonCommon"
        android:id="@+id/action_bar_timer"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_marginRight="2dp"
        android:minLines="2"
        android:maxLines="2"
        android:visibility="invisible"
        android:background="@drawable/drawable_common_buttons" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="@integer/action_bar_app_name_orientation"
        android:layout_toRightOf="@+id/action_bar_image"
        android:layout_toLeftOf="@+id/action_bar_timer">

        <TextView
            style="@style/PlayerActionBarTextAppName"
            android:id="@+id/action_bar_name_color"
            android:text="@string/app_name_action_bar_color"
            android:textColor="@color/redPrimary" />

        <TextView
            style="@style/PlayerActionBarTextAppName"
            android:id="@+id/action_bar_name_audio"
            android:text="@string/app_name_action_bar_audio"
            android:textColor="@color/bluePrimary" />

        <TextView
            style="@style/PlayerActionBarTextAppName"
            android:id="@+id/action_bar_name_player"
            android:text="@string/app_name_action_bar_player"
            android:textColor="@color/greenPrimary" />
    </LinearLayout>
</RelativeLayout>