<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_common_dialog"
    android:padding="10dp">

    <TextView
        style="@style/BigTextView"
        android:id="@+id/equalizer_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/playlist_create_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        style="@style/CommonSpinner"
        android:id="@+id/equalizer_choose_mode_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalizer_header" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/equalizer_settings_recycle"
        style="@style/CommonRecycleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp"
        android:choiceMode="singleChoice"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toTopOf="@+id/equalizer_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/equalizer_choose_mode_spinner" />

    <Button
        style="@style/MediumTextButton"
        android:id="@+id/equalizer_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_common_buttons"
        android:text="@string/playlist_create_cancel"
        app:layout_constraintTop_toBottomOf="@+id/playlist_chooser_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>