<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_common_dialog"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/playlist_chooser_header"
        style="@style/BigTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/playlist_create_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        style="@style/CommonRecycleView"
        android:id="@+id/playlist_chooser_list"
        android:layout_width="0dp"
        android:layout_height="@dimen/dialog_list_height"
        android:choiceMode="singleChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlist_chooser_header" />

    <Button
        style="@style/MediumTextButton"
        android:id="@+id/playlist_chooser_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_common_buttons"
        android:layout_marginTop="8dp"
        android:text="@string/playlist_create_cancel"
        app:layout_constraintTop_toBottomOf="@+id/playlist_chooser_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>