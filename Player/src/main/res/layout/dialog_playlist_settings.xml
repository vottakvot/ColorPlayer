<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_common_dialog"
    android:padding="@dimen/dialog_padding">

    <TextView
        style="@style/BigTextView"
        android:id="@+id/playlist_dialog_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/playlist_dialog_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/MediumTextView"
        android:id="@+id/playlist_dialog_groups_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/playlist_sort_header"
        app:layout_constraintTop_toBottomOf="@+id/playlist_dialog_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        style="@style/MediumTextCheckBox"
        android:id="@+id/playlist_dialog_sort_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/playlist_sort_order"
        app:layout_constraintTop_toBottomOf="@+id/playlist_dialog_groups_title"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioGroup
        android:id="@+id/playlist_dialog_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/playlist_dialog_sort_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            style="@style/MediumTextRadioButton"
            android:id="@+id/playlist_dialog_sort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/playlist_sort_by_name" />
        <RadioButton
            style="@style/MediumTextRadioButton"
            android:id="@+id/playlist_dialog_sort_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/playlist_sort_by_size" />
        <RadioButton
            style="@style/MediumTextRadioButton"
            android:id="@+id/playlist_dialog_sort_albums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/playlist_sort_by_albums" />
        <RadioButton
            style="@style/MediumTextRadioButton"
            android:id="@+id/playlist_dialog_sort_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/playlist_sort_by_artist" />
        <RadioButton
            style="@style/MediumTextRadioButton"
            android:id="@+id/playlist_dialog_sort_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/playlist_sort_by_date" />
    </RadioGroup>

    <CheckBox
        style="@style/MediumTextCheckBox"
        android:id="@+id/playlist_dialog_view_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/playlist_view_expand"
        app:layout_constraintTop_toBottomOf="@+id/playlist_dialog_sort"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>