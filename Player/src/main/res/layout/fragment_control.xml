<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CustomBackground"
    android:id="@+id/control_player_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <!-- Must be in LinearLayout, else TextView restarts marquee, when changing another TextView every time -->
    <LinearLayout
        android:id="@+id/control_track_name_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            style="@style/MediumTextView"
            android:id="@+id/control_track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusableInTouchMode="true"
            android:freezesText="true">
            <requestFocus
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:duplicateParentState="true" />
        </TextView>
    </LinearLayout>

    <SeekBar
        android:id="@+id/control_seek_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:splitTrack="false"
        android:minHeight="@dimen/controls_seek_height"
        android:maxHeight="@dimen/controls_seek_height"
        android:progressDrawable="@drawable/drawable_control_seekbar_progress"
        android:thumb="@drawable/drawable_control_seekbar_thumb"
        android:max="1000"
        android:progress="0"
        android:focusable="false"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/control_track_name_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/control_time_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/control_seek_position"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            style="@style/SmallTextView"
            android:id="@+id/control_position_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="--:--" />
        <TextView
            style="@style/SmallTextView"
            android:id="@+id/control_number_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="----/----" />
        <TextView
            style="@style/SmallTextView"
            android:id="@+id/control_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:focusable="false"
            android:text="--:--" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/control_time_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            style="@style/CommonImageButton"
            android:id="@+id/control_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            style="@style/CommonImageButton"
            android:id="@+id/control_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            style="@style/CommonImageButton"
            android:id="@+id/control_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/image_previous"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            style="@style/CommonImageButton"
            android:id="@+id/control_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            style="@style/CommonImageButton"
            android:id="@+id/control_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/image_next"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <ImageButton
            style="@style/CommonImageButton"
            android:id="@+id/control_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
