<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_common_dialog"
    android:padding="@dimen/dialog_padding">

    <TextView
        style="@style/BigTextView"
        android:id="@+id/playlist_create_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/playlist_create_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        style="@style/MediumTextEdit"
        android:id="@+id/playlist_create_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_edit_dialog"
        android:hint="@string/playlist_create_hint"
        android:textColor="@color/common_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/playlist_create_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        style="@style/MediumTextButton"
        android:id="@+id/playlist_create_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_common_buttons"
        android:layout_marginTop="8dp"
        android:text="@string/playlist_create_create"
        app:layout_constraintTop_toBottomOf="@+id/playlist_create_edit"
        app:layout_constraintEnd_toStartOf="@+id/playlist_create_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        style="@style/MediumTextButton"
        android:id="@+id/playlist_create_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_common_buttons"
        android:layout_marginTop="8dp"
        android:text="@string/playlist_create_cancel"
        app:layout_constraintStart_toEndOf="@+id/playlist_create_ok"
        app:layout_constraintTop_toBottomOf="@+id/playlist_create_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>