<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/common_item_drawable_background_gradient_begin"
                android:centerColor="@color/common_item_drawable_background_gradient_end"
                android:startColor="@color/common_item_drawable_background_gradient_begin"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="90"
                android:endColor="@color/common_item_drawable_background_gradient_end"
                android:centerColor="@color/common_item_drawable_background_gradient_begin"
                android:startColor="@color/common_item_drawable_background_gradient_end"
                android:type="linear" />
        </shape>
    </item>
</layer-list>